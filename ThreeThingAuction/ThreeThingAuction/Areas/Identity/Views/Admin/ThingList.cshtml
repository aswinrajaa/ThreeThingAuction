@model IEnumerable<ThreeThingAuction.Models.Thing>

@{
    ViewData["Title"] = "ThingList";
}

<h2>Auction List</h2>

<p>
    <a asp-action="CreateThings">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teamid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teamid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventId)
                </td>
                <td>
                    <a asp-action="ThingDetail" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteThings" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to MyAdmin</a>
</div>