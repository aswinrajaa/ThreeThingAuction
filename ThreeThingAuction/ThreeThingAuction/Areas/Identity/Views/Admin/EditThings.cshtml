@model ThreeThingAuction.Models.Thing

@{
    ViewData["Title"] = "EditThings";
}

<h2>Edit Thing</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditThings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teamid" class="control-label"></label>
                <input asp-for="Teamid" class="form-control" />
                <span asp-validation-for="Teamid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidValue" class="control-label"></label>
                <input asp-for="BidValue" class="form-control" />
                <span asp-validation-for="BidValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <input asp-for="EventId" class="form-control" />
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ThingList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
