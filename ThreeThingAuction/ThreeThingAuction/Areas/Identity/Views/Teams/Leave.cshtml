@model ThreeThingAuction.Models.Team

@{
    ViewData["Title"] = "Leave";
}

<h2>Are you sure you want to leave the Team?</h2>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Leave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Money" class="control-label"></label>
                <input asp-for="Money" class="form-control" readonly/>
                <span asp-validation-for="Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfMembers" class="control-label"></label>
                <input asp-for="NoOfMembers" class="form-control" readonly/>
                <span asp-validation-for="NoOfMembers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member1" class="control-label"></label>
                <input asp-for="Member1" class="form-control" readonly/>
                <span asp-validation-for="Member1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member2" class="control-label"></label>
                <input asp-for="Member2" class="form-control" readonly/>
                <span asp-validation-for="Member2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member3" class="control-label"></label>
                <input asp-for="Member3" class="form-control" readonly/>
                <span asp-validation-for="Member3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member4" class="control-label"></label>
                <input asp-for="Member4" class="form-control" readonly/>
                <span asp-validation-for="Member4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Leave" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to my team</a>
</div>

